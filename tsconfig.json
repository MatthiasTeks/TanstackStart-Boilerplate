{
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"],
    "compilerOptions": {
      "jsx": "react-jsx",
      "moduleResolution": "Bundler",
      "module": "ESNext",
      "target": "ES2022",
      "skipLibCheck": true,
      "strictNullChecks": true,
      "allowJs": true,
      "esModuleInterop": true,
      "strict": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "~/*": ["./app/*"]
      },
      "noEmit": true,
    },
}